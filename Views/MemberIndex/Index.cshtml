    <script type="text/javascript">
		$(document).ready(function () {
            var loginInfo = JSON.parse(localStorage.getItem('loginInfo'));
            var managerItem = `
                <span class="hello" > Welcome!</span >
                <span class="managerName">${loginInfo.name}</span >`;
            $(".user").html(managerItem);//要刷新的div


            $.ajax({
                url: "@Url.Action("getMemberIndexList","MemberIndex")",
                type: "Get",
                contentType: "application/json; charset=utf-8",
                dataType: "JSON",
                success: function (data) {
                    var memberIndexList = getMemberIndexList(data.data)
                    $("#memberIndexList").html(memberIndexList);//要刷新的div
                }
            })

            function getMemberIndexList(data) {
                let memberIndexHtml = '';
                data.forEach(item => {
                    memberIndexHtml += `
                        <tr>
						    <td class="center" id="memberIndexRowId">${ item.memberIndexId }</td>
						    <td class="center">${ item.name }</td>
							<td class="center">
								<a class="btn btn-info" href="#" id="editMemberIndex">
									<i class="icon-edit "></i>
								</a>
								<a class="btn btn-danger" href="#" id="deleteMemberIndex">
									<i class="icon-trash "></i>
								</a>
							</td>
					    </tr>`;
                });
                console.log(memberIndexHtml)
                return memberIndexHtml;
            }
            $("#memberIndexList").on('click', '#editMemberIndex', function(){
                var memberIndexId = $(this).closest("tr")
                       .find("#memberIndexRowId")
                       .text();
                $.ajax({
                    url: "@Url.Action("getMemberIndexInfo","MemberIndex")",
                    type: "POST",
                    data: JSON.stringify({memberIndexId: memberIndexId}),
                    contentType: "application/json; charset=utf-8",
                    dataType: "JSON",
                    success: function (data) {
                        var memberIndexInfo = data.data;
                        $("#memberIndexInfoModal").addClass("in");
                        $(".editId").val(memberIndexInfo.memberIndexId);
                        $(".editMemberIndexName").val(memberIndexInfo.name);
                        $("#memberIndexInfoModal").attr({ "aria-hidden": "false", style: "display:block;"});
                    }
                })
            })
            $("#memberIndexInfoModal").on('click', '#closeMemberIndexEdit', function(){
                $("#memberIndexInfoModal").removeClass("in");
                $("#memberIndexInfoModal").attr({ "aria-hidden": "true", style: "display:none;"});
            })
            $("#addMemberIndexModal").on('click', '#closeMemberIndexAdd', function(){
                $("#addMemberIndexModal").removeClass("in");
                $("#addMemberIndexModal").attr({ "aria-hidden": "true", style: "display:none;"});
            })
            $("#memberIndexInfoModal").on('click', '#updateMemberIndex', function(){
                var memberIndexId = $(".editId").val();
                var memberIndexName = $(".editMemberIndexName").val();
                $.ajax({
                    url: "@Url.Action("updateMemberIndexInfo","MemberIndex")",
                    type: "POST",
                    data: JSON.stringify({memberIndexId: memberIndexId, memberIndexName: memberIndexName}),
                    contentType: "application/json; charset=utf-8",
                    dataType: "JSON",
                    success: function (data) {
                        alert(data.reason);
                        if (data.success == 1) {
                            $("#memberIndexInfoModal").removeClass("in");
                            $("#memberIndexInfoModal").attr({ "aria-hidden": "true", style: "display:none;"});
                            var url = '@Url.Action("Index", "MemberIndex")';
                            window.location.href = url;
                        }
                    }
                })
            })
            $("#memberIndexList").on('click', '#deleteMemberIndex', function(){
                var memberIndexId = $(this).closest("tr")
                       .find("#memberIndexRowId")
                       .text();
                $.ajax({
                    url: "@Url.Action("deleteMemberIndex","MemberIndex")",
                    type: "POST",
                    data: JSON.stringify({memberIndexId: memberIndexId}),
                    contentType: "application/json; charset=utf-8",
                    dataType: "JSON",
                    success: function (data) {
                        alert(data.reason);
                        $("#memberIndexInfoModal").removeClass("in");
                        $("#memberIndexInfoModal").attr({ "aria-hidden": "true", style: "display:none;"});
                        var url = '@Url.Action("Index", "MemberIndex")';
                        window.location.href = url;
                    }
                })
            })
            $("#addMemberIndex").on('click', function(){
                $("#addMemberIndexModal").addClass("in");
                $("#addMemberIndexModal").attr({ "aria-hidden": "false", style: "display:block;"});
            })
            $("#addMemberIndexModal").on('click', '#addMemberIndex', function(){
                var memberIndexName = $(".addMemberIndexName").val();
                $.ajax({
                    url: "@Url.Action("addMemberIndex","MemberIndex")",
                    type: "POST",
                    data: JSON.stringify({memberIndexName: memberIndexName}),
                    contentType: "application/json; charset=utf-8",
                    dataType: "JSON",
                    success: function (data) {
                        alert(data.reason);
                        if (data.success == 1) {
                            $("#addMemberIndexModal").removeClass("in");
                            $("#addMemberIndexModal").attr({ "aria-hidden": "true", style: "display:none;"});
                            var url = '@Url.Action("Index", "MemberIndex")';
                            window.location.href = url;
                        }
                    }
                })
            })
        });

