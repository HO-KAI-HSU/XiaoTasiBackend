    <script type="text/javascript">
        $(document).ready(function () {
            var loginInfo = JSON.parse(localStorage.getItem('loginInfo'));
            var managerItem = `
                <span class="hello" > Welcome!</span >
                <span class="managerName">${loginInfo.name}</span >`;
            $(".user").html(managerItem);//要刷新的div

            $.ajax({
                url: "@Url.Action("getLocationList","Location")",
                type: "Post",
                contentType: "application/json; charset=utf-8",
                dataType: "JSON",
                success: function (data) {
                    locationArr = data.data;
                    localStorage.setItem("locationArr", JSON.stringify(locationArr));
                    var locationInfo = getLocationSelectData();
                    $(".addLocationId").html(locationInfo);//要刷新的div

                }
            })

            if ($.fn.DataTable.isDataTable('#boardingListTable')) {
                console.log("table true");
                $('#boardingListTable').DataTable({
                    destroy: true,
                    select: true,
                    language: {
                        emptyTable: "Not Boarding Datas!"
                    },
                    ajax: {
                        serverSide: true,
                        processing: true,
                        url: "@Url.Action("getBoardingList","Boarding")",
                        type: "POST",
                        contentType: "application/json; charset=utf-8",
                        dataType: "JSON"
                    },
                    rowId: 'boardingId',
                    columns: [
                        { data: "boardingId" },
                        {
                            data: "locationName", render: function (data, type, row, meta) {
                                var locationInfo = getLocationInfo(row.locationId);
                                return locationInfo.locationName;
                            }
                        },
                        { data: "boardingDatetime" },
                        {
                            data: "travelBoardingType", render: function (data, type, row, meta) {
                                var travelBoardingType = row.customBoardingFlag == "1" ? "客製化上車地點" : row.earlyBoardingFlag == "1" ? "早班車" : "正常車";
                                return travelBoardingType;
                            } },
                        {
                            data: "operation", render: function (data, type, row, meta) {
                                return `
								    <a class="btn btn-info" href="#" id="editBoarding">
									    <i class="icon-edit "></i>
								    </a>
								    <a class="btn btn-danger" href="#" id="deleteBoarding">
									    <i class="icon-trash "></i>
								    </a>`;
                            }
                        }
                    ]
                });
            } else {
                console.log("table false");
            }

            function getLocationSelectData() {
                let locationHtml = '';
                var locationArr = JSON.parse(localStorage.getItem('locationArr'));
                locationArr.forEach(item => {
                    locationHtml += `
　                        <option value="${ item.locationId }">${ item.locationName }</option>
					    `;
                });
                return locationHtml;
            }

            function getLocationInfo(locationId) {
                var groupInfo = '';
                var locationArr = JSON.parse(localStorage.getItem('locationArr'));
                locationArr.forEach(item => {
                    if (locationId == item.locationId) {
                        groupInfo = item;
                    }
                });
                return groupInfo;
            }

            function dateTimetransfar(dateTimeStr) {
                var dateVal = new Date(dateTimeStr);
                var day = dateVal.getDate().toString().padStart(2, "0");
                var month = (1 + dateVal.getMonth()).toString().padStart(2, "0");
                var hour = dateVal.getHours().toString().padStart(2, "0");
                var minute = dateVal.getMinutes().toString().padStart(2, "0");
                var sec = dateVal.getSeconds().toString().padStart(2, "0");
                var ms = dateVal.getMilliseconds().toString().padStart(3, "0");
                var inputDate = dateVal.getFullYear() + "-" + (month) + "-" + (day) + "T" + (hour) + ":" + (minute) + ":" + (sec) + "." + (ms);
                return inputDate;
            }

            $("#boardingList").on('click', '#editBoarding', function () {
                var boardingId = $(this).closest("tr")
                    .attr('id');
                $.ajax({
                    url: "@Url.Action("getBoardingInfo","Boarding")",
                    type: "POST",
                    data: JSON.stringify({boardingId: boardingId}),
                    contentType: "application/json; charset=utf-8",
                    dataType: "JSON",
                    success: function (data) {
                        var boardingInfo = data.data[0];
                        console.log(boardingInfo.boardingDatetime);
                        $("#boardingInfoModal").addClass("in");
                        $(".editId").val(boardingInfo.boardingId);
                        $(".editBoardingDatetime").val(dateTimetransfar(boardingInfo.boardingDatetime));
                        $("#boardingInfoModal").attr({ "aria-hidden": "false", style: "display:block;"});
                    }
                })
            })
            $("#boardingInfoModal").on('click', '#closeBoardingEdit', function(){
                $("#boardingInfoModal").removeClass("in");
                $("#boardingInfoModal").attr({ "aria-hidden": "true", style: "display:none;"});
            })
            $("#addBoardingModal").on('click', '#closeBoardingAdd', function(){
                $("#addBoardingModal").removeClass("in");
                $("#addBoardingModal").attr({ "aria-hidden": "true", style: "display:none;"});
            })
            $("#boardingInfoModal").on('click', '#updateBoarding', function(){
                var boardingId = $(".editId").val();
                var boardingDatetime = $(".editBoardingDatetime").val();
                $.ajax({
                    url: "@Url.Action("updateBoardingInfo","Boarding")",
                    type: "POST",
                    data: JSON.stringify({boardingId: boardingId, boardingDatetime: boardingDatetime}),
                    contentType: "application/json; charset=utf-8",
                    dataType: "JSON",
                    success: function (data) {
                        alert(data.reason);
                        if (data.success == 1) {
                            $("#boardingInfoModal").removeClass("in");
                            $("#boardingInfoModal").attr({ "aria-hidden": "true", style: "display:none;"});
                            var url = '@Url.Action("Index", "Boarding")';
                            window.location.href = url;
                        }
                    }
                })
            })
            $("#boardingList").on('click', '#deleteBoarding', function(){
                var boardingId = $(this).closest("tr")
                    .attr('id');
                $.ajax({
                    url: "@Url.Action("deleteBoarding","Boarding")",
                    type: "POST",
                    data: JSON.stringify({boardingId: boardingId}),
                    contentType: "application/json; charset=utf-8",
                    dataType: "JSON",
                    success: function (data) {
                        alert(data.reason);
                        $("#boardingInfoModal").removeClass("in");
                        $("#boardingInfoModal").attr({ "aria-hidden": "true", style: "display:none;"});
                        var url = '@Url.Action("Index", "Boarding")';
                        window.location.href = url;
                    }
                })
            })
            $("#addBoarding").on('click', function(){
                $("#addBoardingModal").addClass("in");
                $("#addBoardingModal").attr({ "aria-hidden": "false", style: "display:block;"});
            })
            $("#addBoardingModal").on('click', '#addBoarding', function(){
                var locationId = $(".addLocationId").val();
                var boardingDatetime = $(".addBoardingDatetime").val();
                var customBoardingFlag = $("input[name='customBoardingFlag']:checked").val();
                var earlyBoardingFlag = $("input[name='earlyBoardingFlag']:checked").val();
                $.ajax({
                    url: "@Url.Action("addBoarding","Boarding")",
                    type: "POST",
                    data: JSON.stringify({ locationId: locationId, boardingDatetime: boardingDatetime, customBoardingFlag: customBoardingFlag, earlyBoardingFlag: earlyBoardingFlag}),
                    contentType: "application/json; charset=utf-8",
                    dataType: "JSON",
                    success: function (data) {
                        alert(data.reason);
                        if (data.success == 1) {
                            $("#addBoardingModal").removeClass("in");
                            $("#addBoardingModal").attr({ "aria-hidden": "true", style: "display:none;"});
                            var url = '@Url.Action("Index", "Boarding")';
                            window.location.href = url;
                        }
                    }
                })
            })
        });

