    <script type="text/javascript">
        $(document).ready(function () {
            var loginInfo = JSON.parse(localStorage.getItem('loginInfo'));
            var managerItem = `
                <span class="hello" > Welcome!</span >
                <span class="managerName">${loginInfo.name}</span >`;
            $(".user").html(managerItem);//要刷新的div

            if ($.fn.DataTable.isDataTable('#memberListTable')) {
                console.log("table true");
                $('#memberListTable').DataTable({
                    destroy: true,
                    select: true,
                    language: {
                        emptyTable: "Not Member Datas!"
                    },
                    ajax: {
                        serverSide: true,
                        processing: true,
                        url: "@Url.Action("getMemberList","Member")",
                        type: "POST",
                        contentType: "application/json; charset=utf-8",
                        dataType: "JSON"
                    },
                    rowId: 'memberCode',
                    columns: [
                        { data: "memberCode" },
                        { data: "username" },
                        { data: "name" },
                        { data: "phone" },
                        { data: "email" },
                        {
                            data: "status", render: function (data, type, row, meta) {
                                return data == 1 ? "已啟用" : data == -1 ? "已停用" : "尚未啟用";
                            }
                        },
                        {
                            data: "status", render: function (data, type, row, meta) {
                                let memberHtml = ` `;
                                data == 1 || data == 0 ? memberHtml += `
                                                    <a class="btn btn-info" href="#" id="editMember">
								                        <i class="icon-edit "></i>
							                        </a>
							                        <a class="btn btn-danger" href="#" id="deleteMember">
								                        <i class="icon-trash "></i>
							                        </a>` : memberHtml += ``;
                                return memberHtml;
                            }
                        }
                    ]
                });
            } else {
                console.log("table false");
            }

            $("#memberList").on('click', '#editMember', function () {
                var memberCode = $(this).closest("tr")
                    .attr('id');
                $.ajax({
                    url: "@Url.Action("getMemberInfo","Member")",
                    type: "POST",
                    data: JSON.stringify({ memberCode: memberCode}),
                    contentType: "application/json; charset=utf-8",
                    dataType: "JSON",
                    success: function (data) {
                        if (data.success == 0) {
                            alert(data.reason);
                        } else {
                            var memberInfo = data.memberInfo;
                            $("#memberInfoModal").addClass("in");
                            $(".editId").val(memberInfo.memberCode);
                            $(".editMemberName").val(memberInfo.name);
                            $(".editMemberEmail").val(memberInfo.email);
                            $(".editMemberPhone").val(memberInfo.phone);
                            $(".editMemberTelephone").val(memberInfo.telephone);
                            $(".editMemberAddress").val(memberInfo.address);
                            $(".editMemberEmerContactName").val(memberInfo.emerContactName);
                            $(".editMemberEmerContactPhone").val(memberInfo.emerContactPhone);
                            $(".editMemberBirthday").val(memberInfo.birthday);
                            $("#memberInfoModal").attr({ "aria-hidden": "false", style: "display:block;" });
                        }
                    }
                })
            })
            $("#memberInfoModal").on('click', '#closeMemberEdit', function(){
                $("#memberInfoModal").removeClass("in");
                $("#memberInfoModal").attr({ "aria-hidden": "true", style: "display:none;"});
            })
            $("#memberInfoModal").on('click', '#updateMember', function(){
                var memberCode = $(".editId").val();
                var memberName = $(".editMemberName").val();
                var memberEmail = $(".editMemberEmail").val();
                var memberAddress = $(".editMemberAddress").val();
                var memberPhone = $(".editMemberPhone").val();
                var memberTelephone = $(".editMemberTelephone").val();
                var memberBirthday = $(".editMemberBirthday").val();
                var memberEmerContactName = $(".editMemberEmerContactName").val();
                var memberEmerContactPhone = $(".editMemberEmerContactPhone").val();
                $.ajax({
                    url: "@Url.Action("updateMemberInfo","Member")",
                    type: "POST",
                    data: JSON.stringify({ memberCode: memberCode, memberName: memberName, memberEmail: memberEmail, memberAddress: memberAddress, memberTelephone: memberTelephone, memberPhone: memberPhone, memberBirthday: memberBirthday, memberEmerContactName: memberEmerContactName, memberEmerContactPhone: memberEmerContactPhone}),
                    contentType: "application/json; charset=utf-8",
                    dataType: "JSON",
                    success: function (data) {
                        alert(data.reason);
                        if (data.success == 1) {
                            $("#memberInfoModal").removeClass("in");
                            $("#memberInfoModal").attr({ "aria-hidden": "true", style: "display:none;"});
                            var url = '@Url.Action("Index", "Member")';
                            window.location.href = url;
                        }
                    }
                })
            })
            $("#memberList").on('click', '#deleteMember', function(){
                var memberCode = $(this).closest("tr")
                    .attr('id');
                $.ajax({
                    url: "@Url.Action("deleteMember","Member")",
                    type: "POST",
                    data: JSON.stringify({ memberCode: memberCode}),
                    contentType: "application/json; charset=utf-8",
                    dataType: "JSON",
                    success: function (data) {
                        alert(data.reason);
                        $("#memberInfoModal").removeClass("in");
                        $("#memberInfoModal").attr({ "aria-hidden": "true", style: "display:none;"});
                        var url = '@Url.Action("Index", "Member")';
                        window.location.href = url;
                    }
                })
            })
        });

